# Database Configuration
MONGODB_URI=mongodb://localhost:27017/truview

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# Server Configuration
PORT=5000

# Amazon SES Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# SES Email Configuration
SES_FROM_EMAIL=noreply@truviews.in
SES_FROM_NAME=TruView Team

# Optional: SES Email Templates (if using SES templates instead of HTML emails)
# SES_VERIFICATION_TEMPLATE=verification-otp-template
# SES_PASSWORD_RESET_TEMPLATE=password-reset-otp-template

# CORS Configuration (for production)
NODE_ENV=development
